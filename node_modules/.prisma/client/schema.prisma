generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               String   @id @default(cuid())
  email            String   @unique
  name             String?
  password         String
  personalEntities Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  ideasOwned         Idea[]        @relation("IdeasOwned")
  ideasCollaborating Idea[]        @relation("IdeaCollaborators")
  interactions       Interaction[]
  invitationsSent    Invitation[]  @relation("InvitationsSent")
  notesCreated       Note[]        @relation("NotesCreated")
  taggedInNotes      Note[]        @relation("TaggedUsers")
}

model Idea {
  id                   String  @id @default(cuid())
  title                String
  type                 String
  entity               String
  status               String
  priority             Int
  oneLiner             String?
  problem              String?
  solution             String?
  targetCustomer       String?
  businessModel        String?
  risks                String?
  nextSteps            String?
  descriptionColor     String?
  activityColor        String?
  linkedContactIds     String  @default("[]")
  tags                 String  @default("[]")
  todos                String  @default("[]")
  customNoteCategories String  @default("[]")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ownerId String
  owner   User   @relation("IdeasOwned", fields: [ownerId], references: [id])

  collaborators User[] @relation("IdeaCollaborators")

  invitations Invitation[]
  notes       Note[]
}

model Contact {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstName            String?
  lastName             String?
  fullName             String?
  email                String?
  phone                String?
  company              String?
  org                  String?
  role                 String?
  country              String?
  linkedinUrl          String?
  instagramUrl         String?
  twitterUrl           String?
  substackUrl          String?
  isWhatsApp           Boolean @default(false)
  notes                String?
  relationshipStrength Int     @default(1)
  linkedIdeaIds        String  @default("[]")

  taggedInNotes   Note[] @relation("TaggedContacts")
  associatedNotes Note[] @relation("NoteToContact")
}

model Note {
  id         String   @id @default(cuid())
  content    String?
  categories String   @default("[]")
  isPinned   Boolean  @default(false)
  location   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  createdById String
  createdBy   String?
  author      User    @relation("NotesCreated", fields: [createdById], references: [id])

  ideaId String?
  idea   Idea?   @relation(fields: [ideaId], references: [id])

  contactId String?
  contact   Contact? @relation("NoteToContact", fields: [contactId], references: [id])

  taggedContacts Contact[] @relation("TaggedContacts")
  taggedUsers    User[]    @relation("TaggedUsers")
  imageUrl       String?
}

model Interaction {
  id        String    @id @default(cuid())
  type      String?
  content   String?
  date      DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id])
}

model Invitation {
  id        String   @id @default(cuid())
  email     String
  type      String?
  status    String   @default("Pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  senderId String
  sender   User   @relation("InvitationsSent", fields: [senderId], references: [id])

  ideaId String?
  idea   Idea?   @relation(fields: [ideaId], references: [id])
}
